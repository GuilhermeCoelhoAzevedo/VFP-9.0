FUNC AJUSTAR_FORM
*****************
* FORMATA TAMANBHO DAS CAIXAS-TEXTO DE UM FORM
* RETORNA: NADA
LPARAMETERS toFORM

FOR EACH OBJETO IN toFORM.Objects
	IF '*' $ OBJETO.COMMENT
		IF VARTYPE(OBJETO.BACKCOLOR) = 'N'
			OBJETO.BACKCOLOR = 9109503
		ENDIF
	ENDIF
	IF UPPER(OBJETO.BASECLASS) <> 'TEXTBOX'
		LOOP
	ENDIF
	lnTAMANHO = OBJETO.MAXLENGTH
	IF VARTYPE(OBJETO.VALUE)='D'
		lnTAMANHO = 10
	ENDIF
	IF VARTYPE(OBJETO.VALUE)='T'
		lnTAMANHO = 17
	ENDIF
	IF VARTYPE(OBJETO.VALUE)='N'
		lnTAMANHO = LEN(OBJETO.INPUTMASK)
	ENDIF
	IF lnTAMANHO < 1
		LOOP
	ENDIF
	OBJETO.WIDTH = 6 + lnTAMANHO * 7.4
ENDFOR